{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"],
      "@scss*": ["./src/scss/*"],
      "@data*": ["./src/data/*"]
    }
  },
  "include": ["src/**/*.ts", "next-env.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", ".next", "dist", "build"]
}
